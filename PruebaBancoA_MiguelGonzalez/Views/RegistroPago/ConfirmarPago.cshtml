@{
    ViewData["Title"] = "Confirmación de Pago";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Pago Registrada</h2>
        <p>El pago ha sido registrada exitosamente.</p>
        @if (ViewBag.TarjetaId != null)
        {
            <p>Número de Tarjeta: @ViewBag.TarjetaId</p>
        }
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Volver al inicio</a>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>